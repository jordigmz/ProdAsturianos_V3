{% extends "admin_base.njk" %}

{% block titulo %}Comentarios{% endblock %}

{% block contenido %}
    <h2>Comentarios</h2>
    <table class="table table-hover col-12 mt-4">
        {% for comentario in producto.comentarios %}
            <tr class="row active">
                <td class="col-2">
                    <h4>{{ comentario.usuario }}</h4>
                </td>
                <td class="col-8">
                    <p>{{ comentario.comentario }}</p>
                </td>
                <td class="col-2">
                    <form action="/admin/comentarios/{{ producto.id }}/{{ comentario.id }}" method="post">
                        <input type="hidden" name="_method" value="delete" />
                        <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}